{
   "scripts": {
      "browser-sync": "browser-sync start --server --startPath /app --files='./app/*.html,./*.js'",
      "vnu": "vnu ./app/*.html",
      "standard": "standard './app/**/*.js'",
      "test": "npm run vnu ; npm run standard",
      "tailwind": "npx tailwindcss -i ./src/input.css -o ./dist/output.css --watch",
      "start": "npm-run-all --parallel browser-sync tailwind"
   },
   "devDependencies": {
      "npm-run-all": "^4.1.5"
   }
}
